@using DAO
@model tb_Categoria
@{
    ViewBag.Title = "Edit";
}

<h2>Editar </h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model=>model.idCategoria)
<div class="form-horizontal">
    <div class=" form-group">
        @*Id Categoria:*@
        @Html.LabelFor(model => model.idCategoria, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.idCategoria, htmlAttributes: new { @class = "form-control",@required="required", @readonly = "readonly" })
    </div>

    <div class="form-group">
        @*Nombre Categoria:*@
        @Html.LabelFor(model => model.nombreCategoria, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.nombreCategoria, htmlAttributes: new { @class = "form-control" })

    </div>

        <div class="form-group">
            <input type="submit" value="Registrar" class="btn btn-success" />
        </div>

    </div>

}
