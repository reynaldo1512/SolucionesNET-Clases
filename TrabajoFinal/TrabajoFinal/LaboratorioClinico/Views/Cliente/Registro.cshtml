@using DAO
@model tbCliente
@{
    ViewBag.Title = "Registro";
}



<hr />
<h2>
    <a style="float:right;color:green" href="@Url.Action("Index","Cliente")"><i class="fas fa-chevron-circle-left"></i> </a>Registro Cliente
</h2>
<hr />
@using (Html.BeginForm("Registro", "Cliente", FormMethod.Post))
{

    <div class="form-group mb-3">
        <label>DNI </label>

        @Html.TextBoxFor(m => m.DNI, new { @class = "form-control", @required = "required" })
    </div>
    <div class="form-group mb-3">
        <label>Nombre </label>
        @Html.TextBoxFor(m => m.NombreCliente, new { @class = "form-control", @required = "required" })
    </div>
    <div class="form-group mb-3">
        <label>Apellido </label>
        @Html.TextBoxFor(m => m.ApellidosCliente, new { @class = "form-control", @required = "required" })
    </div>
    <div class="form-group mb-3">
        <label>Telefono </label>
        @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", @required = "required" })
    </div>
    <div class="form-group mb-3">
        <label>Direccion </label>
        @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control", @required = "required" })
    </div>
    <div class="form-group mb-3">
        <label>Sexo </label>
        @Html.TextBoxFor(m => m.Sexo, new { @class = "form-control", @required = "required" })
    </div>
    <div class="form-group mb-3">
        <label>Fecha Nacimiento</label>
        @Html.TextBoxFor(m => m.FechaNacimiento, new { @class = "form-control", @required = "required", @type = "date" })
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-success" />

    </div>




}
